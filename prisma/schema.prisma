generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                      String    @id @default(uuid())
  wps_id                  String    @unique  // ID de WPS
  sku                     String
  supplier_product_id     String?
  product_id              Int?
  name                    String
  brand_id                Int?
  product_type            String?
  list_price              Decimal?  @db.Decimal(10, 2)
  mapp_price              Decimal?  @db.Decimal(10, 2)
  dealer_price            Decimal?  @db.Decimal(10, 2)
  inventory_total         Int       @default(0)
  inventory_details       Json?     // Warehouses: ca_warehouse, ga_warehouse, id_warehouse, in_warehouse, pa_warehouse, pa2_warehouse, tx_warehouse
  length                  Decimal?  @db.Decimal(10, 2)
  width                   Decimal?  @db.Decimal(10, 2)
  height                  Decimal?  @db.Decimal(10, 2)
  weight                  Decimal?  @db.Decimal(10, 2)
  upc                     String?
  status                  String?
  status_id               String?
  drop_ship_eligible      Boolean   @default(false)
  drop_ship_fee           String?
  country_id              Int?
  has_map_policy          Boolean   @default(false)
  carb                    Json?
  propd1                  String?
  propd2                  String?
  prop_65_code            String?
  prop_65_detail          String?
  superseded_sku          String?
  unit_of_measurement_id  Int?
  sort                    Int       @default(0)
  images                  Json?     // Array de images con id, domain, path, filename, alt, mime, width, height, size, signature
  attributevalues         Json?     // Array de attributevalues con id, attributekey_id, name, sort
  published_at            DateTime?
  created_at              DateTime?
  updated_at              DateTime?
  last_synced_at          DateTime  @default(now())

  @@index([wps_id])
  @@index([sku])
  @@index([brand_id])
  @@index([product_type])
  @@index([status])
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model VehicleMake {
  id         Int            @id
  db2_key    String?
  name       String
  created_at DateTime?
  updated_at DateTime?
  models     VehicleModel[]

  @@map("vehicle_make")
}

model VehicleModel {
  id             Int          @id
  vehiclemake_id Int
  db2_key        String?
  name           String
  created_at     DateTime?
  updated_at     DateTime?
  make           VehicleMake  @relation(fields: [vehiclemake_id], references: [id])
  years          VehicleYear[]
  vehicles       Vehicle[]

  @@map("vehicle_model")
}

model VehicleYear {
  id         Int           @id
  year       Int
  created_at DateTime?
  updated_at DateTime?
  models     VehicleModel[]
  vehicles   Vehicle[]

  @@map("vehicle_year")
}

model Vehicle {
  id              Int          @id
  vehiclemodel_id Int?
  vehicleyear_id  Int?
  active          Boolean      @default(true)
  created_at      DateTime?
  updated_at      DateTime?
  model           VehicleModel? @relation(fields: [vehiclemodel_id], references: [id])
  year            VehicleYear?  @relation(fields: [vehicleyear_id], references: [id])

  @@map("vehicle")
}

// Pedidos exitosos (pagos aprobados en Mercado Pago)
model Order {
  id                String   @id @default(uuid())
  
  // ID del usuario en Clerk (para usuarios autenticados)
  clerk_user_id     String?
  
  // IDs de pago de Mercado Pago
  payment_id        String   @unique  // ID del pago en MP
  preference_id     String?           // ID de la preferencia
  external_ref      String?           // Referencia externa
  
  // Estado del pedido
  status            String   @default("approved") // approved, processing, shipped, delivered, cancelled
  
  // Datos del cliente
  customer_first_name  String
  customer_last_name   String
  customer_email       String
  customer_phone       String
  customer_dni         String
  
  // Datos de envío
  shipping_address     String
  shipping_city        String
  shipping_province    String
  shipping_zip_code    String
  shipping_notes       String?
  
  // Productos comprados (array JSON con sku, name, quantity, unit_price)
  items                Json
  
  // IDs de marcas compradas (para análisis)
  brand_ids            Int[]
  
  // Tipos de productos comprados (para análisis)
  product_types        String[]
  
  // Resumen de totales
  subtotal             Decimal  @db.Decimal(10, 2)
  discount_code        String?
  discount_amount      Decimal  @default(0) @db.Decimal(10, 2)
  total                Decimal  @db.Decimal(10, 2)
  
  // Metadata adicional
  metadata             Json?    // Cualquier dato adicional del pago
  
  // Timestamps
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt
  
  @@index([payment_id])
  @@index([clerk_user_id])
  @@index([customer_email])
  @@index([status])
  @@index([created_at])
  @@map("orders")
}

// Códigos de descuento para el checkout
model DiscountCode {
  id          String    @id @default(uuid())
  code        String    @unique  // Código único (ej: "DESCUENTO10", "VERANO2024")
  description String?   // Descripción opcional del descuento
  discount_percent Int  @default(0)  // Porcentaje de descuento (0-100)
  discount_amount  Decimal? @db.Decimal(10, 2)  // O monto fijo de descuento
  max_uses    Int?      // Máximo de usos permitidos (null = ilimitado)
  used_count  Int       @default(0)  // Contador de usos
  min_purchase_amount Decimal? @db.Decimal(10, 2)  // Monto mínimo de compra para aplicar
  valid_from  DateTime  @default(now())  // Fecha de inicio
  valid_until DateTime?  // Fecha de expiración (null = no expira)
  is_active   Boolean   @default(true)  // Activo/inactivo
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@index([code])
  @@index([is_active])
  @@map("discount_codes")
}
